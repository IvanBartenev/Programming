#include<stdio.h>
#include<locale.h>
#include<math.h>

//Вариант 26. Вычислите 1^K + 2^K + ... + N^K для заданного пользователем целого N и K.

void main()
{
	setlocale(0, "Russian");
	puts("Введите значение степени K и количества повторений N");
	int k, b, sum = 0, num = 1, z;
	scanf_s("%i", &k);
	scanf_s("%i", &b);
	for (int c = b, count = 0; count <c; count++)
	{
		z = pow(num, k);
		num++;
		sum = sum + z;
	}
	printf("Ваша итоговая сумма равна - %i", sum);
}
