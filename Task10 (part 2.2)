#define _CRT_SECURE_NO_DEPRECATE
#define M_PI 3.14159265358979323846
#include <stdio.h>
#include <locale.h>
#include <math.h>

double sin_n(double x, int N);
void main()
{
	double x = 0, s = 0;
	int N = 0;
	setlocale(LC_ALL, "RUS");
	puts("\t\tЗадание 2.2");
	puts("sin(x)= x - x^3/3! + x^5/5! + x^7/7! + ... (-1)^(k-1) * x^2k-1/(2k-1)!\n");
	puts("Введите x:\n");
	scanf("%lf", &x);
	s = sin(x);
	s = x - pow(x, 3) / Factorial(3) + pow(x, 5) / Factorial(5) - pow(x, 7) / Factorial(7) + sin_n(x, N);
	printf("sin(x) = %6.5lf", s);
}
double sin_n(double x, int N)
{
	double z;
	int k = 1;
	z = pow(-1, k - 1) * pow(x, 2 * k - 1) / Factorial(2 * k - 1);
	return 0;
}
int Factorial(unsigned N)
{
	int result = 1;
	for (unsigned i = 1; i < N + 1; i++) result *= i;
	return result;
}
